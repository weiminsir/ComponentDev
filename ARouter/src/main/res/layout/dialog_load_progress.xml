<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <com.ulang.ulangapp.widget.ProgressWheel
        android:id="@+id/progress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        ProgressWheel:barColor="#ffffff"
        ProgressWheel:barLen="60dp"
        ProgressWheel:barWid="5dp"
        ProgressWheel:rimColor="#00000000"
        ProgressWheel:rimWidth="5dp"
        ProgressWheel:spinSpeed="6dp"
        ProgressWheel:text="请稍后"
        ProgressWheel:textColor="#ffffff"
        ProgressWheel:textSize="14sp" />

</RelativeLayout>